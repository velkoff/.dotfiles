[
    // Emacs keybindings in insert mode
    { "key": "alt+w", "command": "deleteWordLeft", "when": "inputFocus && vim.mode == 'Insert'", }, 
    { "key": "alt+d", "command": "deleteWordRight", "when": "inputFocus && vim.mode == 'Insert'", },

    // Move tabs
    { "key": "cmd+alt+left",  "command": "workbench.action.moveEditorLeftInGroup" },
    { "key": "cmd+alt+right", "command": "workbench.action.moveEditorRightInGroup" },

    // Split panes
    { "key": "cmd+shift+s l", "command": "workbench.action.splitEditorRight" },
    { "key": "cmd+shift+s j", "command": "workbench.action.splitEditorDown" },
    { "key": "alt+tab", "command": "workbench.action.focusNextGroup" },
    { "key": "alt+]", "command": "workbench.action.focusNextGroup" },
    { "key": "alt+[", "command": "workbench.action.focusPreviousGroup" },

    // Increase and decrease the split pane size
    { "key": "alt+shift+]", "command": "workbench.action.increaseViewSize" },
    { "key": "alt+shift+[", "command": "workbench.action.decreaseViewSize" },

    // Increase and decrease font size
    { "key": "shift+ctrl+.", "command": "editor.action.fontZoomIn" },
    { "key": "shift+ctrl+,", "command": "editor.action.fontZoomOut" },
    { "key": "shift+ctrl+0", "command": "editor.action.fontZoomReset" },

    // Markdown preview
    { "key": "cmd+r", "command": "markdown.showPreview", "when": "!notebookEditorFocused && editorLangId == 'markdown'" },
    { "key": "cmd+k v", "command": "markdown.showPreviewToSide", "when": "!notebookEditorFocused && editorLangId == 'markdown'" },
    
    // Folding
    { "key": "alt+-", "command": "editor.fold", "when": "editorTextFocus && foldingEnabled" },
    { "key": "alt+=", "command": "editor.unfold", "when": "editorTextFocus && foldingEnabled" },

    // Join lines
    { "key": "alt+l", "command": "editor.action.joinLines", "when": "editorTextFocus && !editorReadonly" },
]
